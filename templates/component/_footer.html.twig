<footer>
    <div class="footer" id="footer">
        <h4>Feel free to contact me :-)</h4>
        <div class="footer-contact">
            {% if user %}
                <div class="info-contact">
                    <div class="phone flex-row">
                        <a href="tel{{ user.phone }}" class="flex-row">
                        <img class="mr10" src="{{ asset('build/images/phone.png') }}" alt="phone">
                        <p>{{ user.phone }}</p>
                        </a>
                    </div>
                    <div class="mail flex-row">
                        <a href="mailto:{{ user.email }}" class="flex-row">
                        <img class="mr10" src="{{ asset('build/images/envelope.png') }}" alt="envelope">
                        <p>victorcrombez@gmail.com</p>
                        </a>
                    </div>
                </div>
                <div class="link-contact">
                    <div class="separation mr30"></div>
                    <div class="logo-web flex-row">
                        <a class="logo" target="_blank" href="{{ user.github }}"><img src="{{ asset('build/images/github.png') }}" alt="github"></a>
                        <a class="logo" target="_blank" href="{{ user.linkedin }}"><img src="{{ asset('build/images/linkedin.png') }}" alt="linkedin"></a>
                    </div>
                </div>
            {% endif %}

        </div>
    </div>
</footer>
